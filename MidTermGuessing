- Remember to add QUIT
- Make the computer "less robotic" aka repetitively use user's name
"""

#local variables
number = random.randrange(1,11)
oneName = 0
twoName = 0
gameContinue = 'Y'
oneGuess = 0
twoGuess = 0
counter = 0


#Prompt Intro
print("This is a number guessing game. The computer will generate a number between 1 and 10. You will guess the number to win.")
oneName = input("Enter your name: ")
multiplayer = input("Hi " + oneName + ". Would you like to play with someone else? (Enter 'Y' for yes and 'N' for no)")
if multiplayer == "Y":
    twoName = input("Enter player 2's name: ")
    fancyGame = input("Hi " + oneName + " and " + twoName + ". Would you like to play two out of three games? (Enter 'Y' for yes and 'N' for no)")
    if fancyGame == "Y":
        while gameContinue == 'Y':
            codeForTwoPlayersButLimitedGames =  1
            print("Begin!")
            gameContinue = input("Congratulations," + oneName + "! You have guessed the correct number!. Would you like to play again? (Enter 'Y' for yes and 'N' for no)")
    elif fancyGame == "N":
        while gameContinue == 'Y':
            codeForTwoPlayersButUnlimitedGames =  1
            print("Begin!")
            gameContinue = input("Congratulations," + oneName + "! You have guessed the correct number!. Would you like to play again? (Enter 'Y' for yes and 'N' for no)")
elif multiplayer == "N":
    while gameContinue == 'Y':
        codeForOnePlayersButUnlimitedGames =  1
        number = random.randrange(1,11)
        print("Begin!")
        print(number)
        counter = 0 #reset counter
        oneGuess = 0 #reset guess, just in case the next random number in the same as the previous random number
        while oneGuess != number and counter < 10:
            oneGuess = int(input("Enter your guess: "))
            if oneGuess == number:
                counter = 10
                print("Congratulations, " + oneName + "! You have guessed the correct number!")
            elif oneGuess == number and counter == 10:
                gameContinue = input("Opps," + oneName + "You have used up all of your tries. How hard is it to guess a number between 1 and 10 when you have ten tries. Play again? (Enter 'Y' for yes and 'N' for no)")
            elif oneGuess < number:
                #print(counter)
                print("Incorrect, " + oneName + ".You have " + str(9 - counter) + " more tries. Guess higher..")
                counter += 1
            elif oneGuess > number:
                #print(counter)
                print("Incorrect, " + oneName + ".You have " + str(9 - counter) + " more tries. Guess lower..")
                counter += 1
        gameContinue = input("Would you like to play again? (Enter 'Y' for yes and 'N' for no)")


